datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  bookings  Booking[]
  createdAt DateTime  @default(now())
  email     String?   @unique
  firstName String?
  id        String    @id @default(cuid())
  lastName  String?
  password  String
  roles     Json
  rooms     Room[]
  updatedAt DateTime  @updatedAt
  username  String    @unique
}

model Booking {
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  room      Room?    @relation(fields: [roomId], references: [id])
  roomId    String?
  tItle     String
  updatedAt DateTime @updatedAt
  user      User?    @relation(fields: [userId], references: [id])
  userId    String?
}

model Building {
  address   String
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  rooms     Room[]
  title     String
  updatedAt DateTime @updatedAt
}

model Room {
  bookings   Booking[]
  building   Building? @relation(fields: [buildingId], references: [id])
  buildingId String?
  createdAt  DateTime  @default(now())
  id         String    @id @default(cuid())
  title      String?
  updatedAt  DateTime  @updatedAt
  user       User?     @relation(fields: [userId], references: [id])
  userId     String?
}
